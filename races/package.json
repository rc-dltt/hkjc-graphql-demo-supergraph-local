{
  "name": "a-day-at-the-races",
  "version": "1.0.0",
  "description": "TSTOPS-M1 Apollo graphQL server application",
  "main": "dist/index.js",
  "scripts": {
    "copy-data": "copyfiles -f ./src/data/*.json ./dist/data",
    "sonar": "sonar-scanner",
    "build": "tsc && npm run copy-data",
    "jest": "jest --verbose",
    "lint": "tslint --project ./",
    "test": "npm run build & npm run lint & jest --color",
    "start": "npm run build && node ./dist/index.js"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.steps.ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "testResultsProcessor": "jest-json-reporter"
  },
  "jestJsonReporter": {
    "outputFile": "./.reports/test-results.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.9.0",
    "@apollo/subgraph": "^2.5.1",
    "@cucumber/gherkin": "^26.2.0",
    "@types/jest": "^29.5.4",
    "copyfiles": "^2.4.1",
    "cucumber": "^6.0.7",
    "dotenv": "^16.3.1",
    "graphql": "^16.7.1",
    "graphql-tag": "^2.12.6",
    "jest": "^29.6.3",
    "jsonwebtoken": "^9.0.1",
    "notarealdb": "^0.2.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.1",
    "@types/node": "^20.4.5",
    "babel-jest": "^29.6.3",
    "jest-cucumber": "^3.0.1",
    "jest-json-reporter": "^1.2.2",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-lint": "^4.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
